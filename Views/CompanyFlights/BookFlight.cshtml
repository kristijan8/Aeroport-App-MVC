    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Companies.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flight.FlightName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightName)
        </dd>
        <dt class = "col-sm-2">
