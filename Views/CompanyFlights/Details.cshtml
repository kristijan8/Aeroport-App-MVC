@model AirportApplication.Models.CompanyFlight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Companies)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Companies.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)$
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.getDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.getDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.getTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.getTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
        @Html.Raw("|");
    }
    <a href="javascript:void(0);" onclick="history.go(-1);">Back to List</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
    {
        @Html.Raw("|");
        <a asp-action="BookFlight" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm">Book flight</a>
    }
</div>
