@model IEnumerable<AirportApplication.Models.CartItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Here are your booked flights</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyFlight.Companies.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyFlight.Flight.FlightName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyFlight.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.getTotalPricePerFlight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyFlight.Companies.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyFlight.Flight.FlightName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyFlight.Price)$
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.getTotalPricePerFlight)$
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Remove booked flight</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit quantity</a>
            </td>
        </tr>
}
    </tbody>
</table>
<h1>Total price for all booked flights is: @ViewBag.TotalPrice $</h1>
<a asp-action="ProceedCart" class="btn btn-primary btn-sm">Buy the tickets for the flight</a>
<a asp-action="EmptyCart" class="btn btn-danger btn-sm">Remove all booked flights</a>

